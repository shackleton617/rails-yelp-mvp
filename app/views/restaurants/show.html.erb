<%= link_to "Back to restaurants", restaurants_path %>

<h2><%= @restaurant.name %></h2>
<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

  <strong>Category:</strong>
  <%= @restaurant.category.capitalize %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone_number %>
</p>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
<br><br>

<p>
  <strong>Reviews:</strong>
  <br>

   <% @restaurant.reviews.each do |review| %>
   <%= "Rating #{review.rating}"%> <%= "Review: #{review.content}" %> <br>
   <% end %>

</p>

